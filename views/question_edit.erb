<h2>Individual question page</h2>

<h3><%= @question.description() %></h3>

<form action="/questions/<%= @question.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="description">Change the question:</label>
  <input id="description" name="description" type="text" required>
  <button class="btn btn-warning" type="submit">Update</button>
</form>
<hr>

<form action="/questions/<%= @question.id() %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">
  <button class="btn btn-danger" type="submit">Delete</button>
</form>

<hr>
<button class="btn btn-success"><a href="/questions/new">Add new question</a></button>
<button class="btn btn-success"><a href="/surveys/new">Add new survey</a></button>
